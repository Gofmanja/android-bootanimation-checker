<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bq.bootanimation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        
        <activity
            android:name="com.bq.bootanimationtest.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bq.bootanimationtest.activities.AnimationActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
        </activity>
        <activity 
            android:name="com.bq.bootanimationtest.activities.HelpActivity"
            android:label="@string/app_name"
            android:screenOrientation="nosensor">
        </activity>
        <activity 
            android:name="com.coderplus.filepicker.FilePickerActivity"
            android:screenOrientation="nosensor">
        </activity>
        
    </application>

</manifest>
